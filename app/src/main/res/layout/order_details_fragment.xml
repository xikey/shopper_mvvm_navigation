<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyCoordinate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    tools:context=".ui.fragments.OrderDetailsFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/very_small_10"
        android:fitsSystemWindows="false"
        android:theme="@style/AppTheme.AppBarOverlay">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="parallax"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimary"
                android:elevation="6dp" />



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="75dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_round_album_white_24" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="تعداد ردیف:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />

                        <TextView
                            android:id="@+id/txtRowCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/dots"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_round_album_white_24" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="مجموع اقلام:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />

                        <TextView
                            android:id="@+id/txtTotalCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="..."
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_round_album_white_24" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="تخفیفات:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />

                        <TextView
                            android:id="@+id/txtTotalDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="..."
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_round_album_white_24" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="جمع فاکتور:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />

                        <TextView
                            android:id="@+id/txtTotalPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="..."
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font_size" />


                    </LinearLayout>




                </LinearLayout>

            </LinearLayout
                >




        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <include android:id="@+id/lyProgres" layout="@layout/layout_progress_match_parent_with_title" />

    <include android:id="@+id/lyContent" layout="@layout/content_order_detail" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_select_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:layout_gravity="bottom|end"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="#FAAB1A"
        android:contentDescription="@string/add_product"
        android:elevation="6dp"
        android:text="@string/add_product"
        android:textColor="@color/white"
        app:icon="@drawable/ic_round_add_white_24"
        app:iconTint="@color/white" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <Button
            android:visibility="gone"
            android:id="@+id/btnSend"
            android:layout_weight="0.5"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/finilizing"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size"
            app:backgroundTint="@color/colorAccent"
            app:elevation="0dp"
            app:strokeColor="@color/colorAccent" />



        <Button
            android:layout_weight="0.5"
            android:id="@+id/btnPay"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/pay"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size"
            app:backgroundTint="@color/colorAccent_two"
            app:elevation="0dp"
            app:strokeColor="@color/colorAccent" />


    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
