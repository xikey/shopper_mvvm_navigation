<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:ellipsize="end"
            android:gravity="center"

            android:maxLines="2"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/very_small_10" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"

            android:maxLines="2"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/very_small_10" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />

        <TextView
            android:id="@+id/txtFi"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"

            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/very_small_10" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/very_small_10" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />


        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/very_small_10" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />


        <RelativeLayout
            android:id="@+id/lyOpenClose"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgOpen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_round_arrow_drop_down_24" />

            <ImageView
                android:id="@+id/imgColse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_round_arrow_drop_up_24" />


        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_gray" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_border_only"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right"
                android:padding="5dp"
                android:text="بارکد:"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />

            <TextView
                android:id="@+id/txtBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="right"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right"
                android:padding="5dp"
                android:text="تخفیف 1:"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="0"
                android:gravity="right"
                android:padding="5dp"
               android:id="@+id/txtDiscountPrice1"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right"
                android:padding="5dp"
                android:text="تخفیف 2:"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="right"
                android:text="0"
                android:padding="5dp"
                android:id="@+id/txtDiscountPrice2"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right"
                android:padding="5dp"
                android:text="تخفیف درصدی:"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="right"
                android:text="0%"
                android:padding="5dp"
                android:id="@+id/txtDiscountPercent"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right"
                android:padding="5dp"
                android:text="تخفیف نهایی:"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="0"
                android:gravity="right"
                android:padding="5dp"
                android:id="@+id/txtTotalDiscount"
                android:textColor="@color/black"
                android:textSize="@dimen/very_small_font_size" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray" />


    </LinearLayout>

</LinearLayout>