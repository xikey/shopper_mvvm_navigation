<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:id="@+id/lyContent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            app:cardBackgroundColor="@color/background_color"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/lyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left"
                    android:layoutDirection="rtl">

                    <LinearLayout
                        android:id="@+id/lyHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="15dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_font_size" />


                        <ImageView
                            android:id="@+id/imgClose"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            app:srcCompat="@drawable/ic_round_close_black_24" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lyHead"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilRemainedPrice"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="قابل پرداخت">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtRemainedPrice"
                                android:textSize="@dimen/very_small_10"
                                android:clickable="false"
                                android:focusable="false"
                                android:layout_marginRight="10dp"
                                android:inputType="none"
                                android:layout_marginLeft="10dp"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCount"

                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cost">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtCount"
                                android:focusedByDefault="false"
                                android:inputType="numberDecimal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <View
                            android:layout_marginTop="50dp"
                            android:background="#e5e5e9"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:id="@+id/lyBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <Button

                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                                android:elevation="5dp"
                                android:textSize="@dimen/very_small_10"
                                android:id="@+id/btnAdd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/submit" />


                            <Button
                                android:textSize="@dimen/very_small_10"
                                android:id="@+id/btnCancel"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="انصراف" />


                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


            </ScrollView>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <include android:id="@+id/lyProgres" layout="@layout/layout_progress_match_parent_with_title"/>

</RelativeLayout>